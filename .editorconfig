# Arquivos C# e scripts C#
[*.{cs,csx}]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

indent_style = space
indent_size = 4
max_line_length = 100
# noinspection EditorConfigKeyCorrectness
csharp_style_prefer_trailing_commas = false:suggestion

# Arquivos XML, .csproj, .props, .targets, .config
[*.{csproj,props,targets,xml,config}]
indent_style = space
indent_size = 2
max_line_length = 100
