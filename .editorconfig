# Arquivos C# e scripts C#
[*.cs]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

indent_style = space
indent_size = 4

# ❌ Desabilitar quebra de linha automática
max_line_length = 10000

# ✅ Preferências de estilo
csharp_style_prefer_trailing_commas = false:suggestion

# ✅ Sempre usar chaves em if, for, etc.
csharp_prefer_braces = true:error

# ❌ Não permitir statements embutidos na mesma linha (força quebra de linha e mantém 1TBS)
csharp_style_allow_embedded_statements_on_same_line_experimental = false:suggestion
dotnet_style_allow_embedded_statements_on_same_line = false:suggestion

# ✅ Usar 1TBS (default no C#, mas reforçado)
csharp_new_line_before_open_brace = all

# ❌ Não preservar blocos de uma linha (expande para multilinha)
csharp_preserve_single_line_blocks = false
csharp_preserve_single_line_statements = false

# ✅ Namespace no estilo file-scoped (opcional, mas recomendado)
csharp_style_namespace_declarations = file_scoped:suggestion

# ✅ Se quiser evitar warnings sobre linhas longas no IDE
dotnet_diagnostic.IDE0059.severity = none

# IDE0290: Use primary constructor
dotnet_diagnostic.IDE0290.severity = none

# IDE0130: Namespace does not match folder structure
dotnet_diagnostic.IDE0130.severity = error

# IDE0005: Using directive is unnecessary.
dotnet_diagnostic.IDE0005.severity = error

# IDE0002: Simplify Member Access
dotnet_diagnostic.IDE0002.severity = none

# ✅ Propriedades auto-implementadas { get; set; } na mesma linha
csharp_style_prefer_auto_properties = true:error

# ✅ Linha em branco antes de if, for, foreach, switch, return
csharp_new_line_before_control_flow_statement = true:suggestion

# ✅ Não permitir mais de uma linha em branco em sequência
dotnet_style_allow_multiple_blank_lines = false:error

# ✅ Variáveis sequenciais sem linhas em branco entre elas
dotnet_style_sequential_variable_declarations_no_blank_lines = true:error

# ✅ Sempre usar chaves em if, for, foreach, do, while (já está configurado)
csharp_prefer_braces = true:error

# Default severity for analyzer diagnostics with category 'StyleCop.CSharp.DocumentationRules'
dotnet_analyzer_diagnostic.category-StyleCop.CSharp.DocumentationRules.severity = none

# SA1413: Use trailing comma in multi-line initializers
dotnet_diagnostic.SA1413.severity = none

# SA1010: Opening square brackets should be spaced correctly
dotnet_diagnostic.SA1010.severity = none

# SA1011: Closing square brackets should be spaced correctly
dotnet_diagnostic.SA1011.severity = none

# IDE0003: Remove qualification
dotnet_diagnostic.IDE0003.severity = none

# SA1009: Closing parenthesis should be spaced correctly
dotnet_diagnostic.SA1009.severity = none

# IDE1006: Naming Styles
dotnet_diagnostic.IDE1006.severity = none

# SA1000: Keywords should be spaced correctly
dotnet_diagnostic.SA1000.severity = none

# SA1101: Prefix local calls with this
dotnet_diagnostic.SA1101.severity = none
