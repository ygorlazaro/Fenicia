@inherits LayoutComponentBase

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    body {
        min-height: 100vh;
        overflow: hidden;
    }

    body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("/images/background.png");
        background-repeat: repeat;
        background-size: auto; /* ou cover */
        opacity: 0.4;
        z-index: -1;
    }

    main {
        position: relative;
        z-index: 1;
    }
</style>

<main>
    @Body
</main>
