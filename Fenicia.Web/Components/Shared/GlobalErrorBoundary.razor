@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
<ErrorBoundary>
    <ChildContent>
        @ChildContent
    </ChildContent>
    <ErrorContent>
        <div class="alert alert-danger" role="alert">
            Ocorreu um erro inesperado: @context.Message
        </div>
    </ErrorContent>
</ErrorBoundary>
