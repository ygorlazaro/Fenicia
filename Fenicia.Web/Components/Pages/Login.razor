@page "/Login"
@using Fenicia.Web.Providers.Auth
@using Blazored.LocalStorage
@using Fenicia.Auth.Domains.Token
@using Fenicia.Auth.Domains.Token.Logic
@inject ILocalStorageService LocalStorage
@inject TokenProvider TokenProvider
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Login</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @_errorMessage
                        </div>
                    }
                    <form @onsubmit="HandleSubmit" @onsubmit:preventDefault>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" 
                                   id="email" 
                                   class="form-control" 
                                   @bind="_tokenRequest.Email" 
                                   required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" 
                                   id="password" 
                                   class="form-control" 
                                   @bind="_tokenRequest.Password" 
                                   required />
                        </div>

                        <div class="mb-3">
                            <label for="cnpj" class="form-label">CNPJ</label>
                            <input type="text" 
                                   id="cnpj" 
                                   class="form-control" 
                                   @bind="_tokenRequest.Cnpj" 
                                   maxlength="14" 
                                   required />
                        </div>

                        <div class="text-center">
                            <button class="btn btn-primary" disabled="@_isLoading">
                                @if (_isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                    <span>Loading...</span>
                                }
                                else
                                {
                                    <span>Login</span>
                                }
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    private TokenRequest _tokenRequest = new()
    {
        Cnpj = "23351185000184",
        Email = "ygor@ygorlazaro.com",
        Password = "Age14rjy"
    };
    private bool _isLoading;
    private string? _errorMessage;

    protected override void OnInitialized()
    {
        LocalStorage.RemoveItemAsync("authToken");
        LocalStorage.RemoveItemAsync("refreshToken");
    }

    private async Task HandleSubmit()
    {
        try
        {
            _isLoading = true;
            _errorMessage = null;

            if (string.IsNullOrWhiteSpace(_tokenRequest.Email) ||
                string.IsNullOrWhiteSpace(_tokenRequest.Password) ||
                string.IsNullOrWhiteSpace(_tokenRequest.Cnpj))
            {
                _errorMessage = "Please fill in all required fields.";
                return;
            }

            var response = await TokenProvider.GetTokenAsync(_tokenRequest);
            
            if (response != null)
            {
                await LocalStorage.SetItemAsync("authToken", response.Token);
                await LocalStorage.SetItemAsync("refreshToken", response.RefreshToken);
                NavigationManager.NavigateTo("/home", true);
            }
            else
            {
                _errorMessage = "Invalid login attempt.";
            }
        }
        catch (HttpRequestException ex)
        {
            _errorMessage = ex.Message;
            Console.WriteLine($"Error details: {ex}");
        }
        catch (Exception ex)
        {
            _errorMessage = "An unexpected error occurred. Please try again.";
            Console.WriteLine($"Error details: {ex}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }
}